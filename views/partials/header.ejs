<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%=title%></title>
    <link rel="stylesheet" href="../stylesheets/style.css">
    <link rel="stylesheet" href="../stylesheets/shoping.css">
    <link rel="stylesheet" href="../stylesheets/login.css">
    <link rel="stylesheet" href="../stylesheets/media.css">

    <script src="https://kit.fontawesome.com/342cf64192.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  </head>
  <body>

<!-- -------------------------------------------------------- -->
<nav id="navbar">
    <div class="p-0 d-flex justify-content-between align-items-center container  h-100" >
      <div class="logo ">
        <img src="..\images\Screenshot_2023-03-12_133238-removebg-preview.png" class="logo-h4 " style="object-fit: cover; width: 100px;" alt="">
        <button id="menu"><i class="fa-solid fa-bars fa-2x"></i></button>
      </div>
      <div class="container1 " id="menu-content" >
        <ul >
          <li class="home active list"><a href="/" >Home</a></li>
          <li class="shop list"><a href="/shop" >shop</a></li>
          <li class="about list"><a href="/about" >About</a></li>
          <li class="contact list"><a href="/contact" >contact</a></li>
        </ul>
    </div>
    <div class="d-flex align-items-center gap-3 p-0 nav-right">
      
      
      <% if(user){ %>
        <div style="position: relative;" class=" cart " title="cart">
          <a href="/cart" ><i class="fa-solid fa-bag-shopping" ></i></a>
        <div style="position: absolute; width: 17px; height: 17px; border-radius: 50%; top: 0; right: 0; " class="bg-danger d-flex align-items-center justify-content-center text-white"><span style="font-size: 10px; font-weight: 600;"><%=user.cart.length%></span></div>
      </div>

        <div class="dropdown">
          <div  type="button" data-bs-toggle="dropdown"  aria-expanded="false" class="border d-flex align-items-center justify-content-center gap-3 p-1" style="border-radius: 20px; " alt="">
            <img src="../images/uploads/<%=user.photo%>" title="<%=user.fullname%>" style="width: 30px; height: 30px; border-radius: 50%;">
            <i class="fa-solid fa-bars" title="menu" style="margin-right: 5px;"></i>
          </div>
          <ul class="dropdown-menu ">
            <li><a class="dropdown-item d-flex gap-3 align-items-center" href="/account"><i class="fa-solid fa-user text-dark ml-4" style="font-size: 15px;"></i> Account</a> </li>
            <li><a class="dropdown-item d-flex gap-3 align-items-center" href="/order"><i class="fa-solid fa-cart-arrow-down text-dark ml-4" style="font-size: 15px;"></i> orders</a></li>
            <li ><a class="dropdown-item d-flex gap-3 align-items-center"  href="/notification"><i class="fa-solid fa-bell text-dark ml-4" style="font-size: 15px;"></i> notifications</a></li>
            <li><a class="dropdown-item d-flex gap-3 align-items-center" href="/logout"><i class="fa-solid fa-right-from-bracket text-dark ml-4" style="font-size: 15px;"></i> Logout</a></li>
          </ul>
        </div>
        <% }else{ %>
            <a href="/login" ><h5 class="text-white m-0">Login</h5></a>
        <% } %>
      </div>
    </div>
</nav>

<section id="preloder">
    <div class="d-flex">
      <div class="loading-bar"></div>
      <div class="loading-bar"></div>
      <div class="loading-bar"></div>
      <div class="loading-bar"></div>
    </div>
    <strong >LOADING...</strong>
</section>

<script>
  window.onload = ()=>{
      document.getElementById("preloder").style.display="none";
  }
</script>