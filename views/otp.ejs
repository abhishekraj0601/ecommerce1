<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="../stylesheets/login.css">
    <script src="https://kit.fontawesome.com/342cf64192.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  </head>
  <body>
   
    <section id="form" style="height: 100vh;">
        <a href="/" class="btn btn-primary" style="position: absolute; top: 5%; left: 5%;">home</a>
        <div id="login">
            <div class="login-left d-flex align-items-center flex-column justify-content-center gap-5">
                <img src="https://colorlib.com/etc/regform/colorlib-regform-7/images/signin-image.jpg" alt="">
            </div>
            <div class="login-right p-5">
                <h1 style="font-weight: 700;">Reset Password</h1>
                <form action="/forget/<%=user._id%>" method="post" class="d-flex flex-column gap-3 mt-4">
                    <div class="form-group d-flex align-items-center">
                        <label for="username"><i class="fa-solid fa-lock"></i></label>
                        <input type="number" name="otp" id="" placeholder="Enter Your Otp" required>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label for="password"><i class="fa-solid fa-lock"></i></label>
                        <input type="password" name="password" id="" class="password" placeholder=" New password" required>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <label for="password"><i class="fa-solid fa-lock"></i></label>
                        <input type="password" name="confirmpassword" id="" class="password" placeholder=" confirm password" required>
                    </div>
                    <div class="container d-flex gap-2 p-0 ">
                        <input type="checkbox" name="" id="" class="chekbox" style="width: 15px;" >
                        <label for="show password"> show password</label>
                    </div>

                   <div style=" display: flex;  align-items: center; flex-wrap: wrap; " class="gap-3 mt-3" >
                    <button class="mx-auto" >Reset Password</button>
                    <button type="button"  class="mx-auto otp-resend" style="background: none; color: green; ">RESEND OTP<hr style="opacity: 1; margin: 0; font-weight: 500;"></button>
                   </div>
                </form>
                <!-- <small >otp expire in <span class="date"></span></small> -->
            </div>
        </div>
       <input type="text" name="" id="ema" value="<%=user._id%>" style="display: none;">
    </section>

<script>




document.querySelector(".otp-resend").addEventListener("click",function(){
 var x = document.querySelector("#ema")
 axios.get(`/resendotp/${x.value}`).then(function(res){
    alert("otp sent succesfuly")
 })
})
 
</script>
    <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>