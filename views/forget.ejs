<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>forget password</title>
    <link rel="stylesheet" href="../stylesheets/login.css">
    <script src="https://kit.fontawesome.com/342cf64192.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <style>
        #login{
            padding: 0;
        }
    </style>
  </head>
  <body>
        <section id="form" style="height: 100vh;">
            <a href="/" class="btn btn-primary" style="position: absolute; top: 5%; left: 5%;">home</a>


        <div id="login">
            <div class="login-left d-flex align-items-center flex-column justify-content-center gap-5">
                <img src="https://colorlib.com/etc/regform/colorlib-regform-7/images/signin-image.jpg" alt="">
               <!-- <a href="/login"> <button class="btn text-dark" style="background: none;" >Login  <hr style="margin: 0; opacity: 1;"></button></a> -->

            </div>
            <div class="login-right p-5 ">
                <h1 style="font-weight: 700;" class="mt-5 text-center">recover password</h1>
                <form action="/forget" method="post" class="d-flex flex-column gap-3 mt-5">
                    <div class="form-group " style="position: relative;">
                        <div class="d-flex align-items-center">
                            <label for="username"><i class="fa-solid fa-user"></i></label>
                            <input type="email" name="username" id="usernum" placeholder="Email ID" required>
                        </div>
                        <small class="mx-3 m-0 username-suggestion" style="position: absolute; font-size: 11px;"></small>
                    </div>
                   
                    <button class="mt-4 w-100">find account</button>
                </form>
                
            </div>
        </div>

    </section>
<script>
     document.querySelector("#usernum").addEventListener("change",function(){
        axios.get(`/check/${this.value}`).then(function(res){
            var small = document.querySelector(".username-suggestion")
            if (res.data == null) {
                small.style.display="block"
                small.style.color="red";
                small.textContent = "user not found."
            }else{
                small.style.display="block"
                small.style.color="green";
                small.textContent = "user found."

            }
        })
      })
</script>

